<div class="media">
  <div class="media-left media-middle">
    <a href="#users/<%= user.id %>">
      <img class="media-object" src="<%= thumbnail %>" alt="<%= user.escape('username') %>">
    </a>
  </div>
  <div class="media-body">
    <h6 class="media-heading"><%= user.escape('username') %></h6>
    <p><%= comment.escape('body') %></p>
  </div>
</div>
<div class="delete-comment-div">
<% if (currentUserId == pageOwnerId || currentUserId == comment.user().id) { %>
  <input type="button" value="DELETE" class="delete-comment btn btn-xs btn-danger">
<% } %>
</div>
